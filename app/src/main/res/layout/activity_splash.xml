<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple"
                tools:context="com.example.ssani.fingo.SplashActivity">

    <ImageView
            android:id="@+id/logo"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/game_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dm_large"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/game"
            />

    <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dm_huge"
            />

    <TextView
            android:id="@+id/game_title"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/space"
            android:layout_marginBottom="@dimen/dm_very_huge"
            android:textSize="@dimen/text_vvv_huge"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/app_name"/>

    <Button
            android:id="@+id/start_button"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dm_very_huge"
            android:background="@drawable/regular_button_selector"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:typeface="sans"
            android:textColor="@color/purple"
            android:text="@string/start_button"
            />

</RelativeLayout>
